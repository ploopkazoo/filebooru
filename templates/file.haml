!!! 5
%html
	%head
		%meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
		%link{:rel => "stylesheet", :href => "/static/css/filebooru.css"}
		%title {{ com.instance }}
	%body
		#nav
			.pull-left
				.title
					%a{:href => "/"} {{ com.instance }}
			.pull-right
				%a{:href => "/upload"} Upload
				%a{:href => "/user/me"} {{ username }}
		%h2 {{ data[0] }}
		%a.bluebuttonlink{:href => "#"}
			Open
		%a.greybuttonlink{:href => "#"}
			Download
		%table.fileinfo
			%tr
				%td Size
				%td {{ data[1] | human_size }}
			%tr
				%td Owner
				%td {{ data[2] }}
			%tr
				%td Date uploaded
				%td {{ data[3] | datetime_string }}
			%tr
				%td Tags
				%td {{ data[4] | comma_list }}
			%tr
				%td sha256
				%td
					.mono {{ data[5] }}
